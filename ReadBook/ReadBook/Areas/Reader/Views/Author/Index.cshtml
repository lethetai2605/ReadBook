@model IEnumerable<ReadBook.Models.Authors>
@{ 
    ViewData["Title"] = "Author";
}
<br />
<br />
@foreach (var author in Model)
{
<div class="form-group row">
    <div class="col-4 ">
        <a asp-action="Infor" asp-controller="Author" asp-route-id="@author.Id" class="text-info" style="font-size: 18.72px"><i class="far fa-address-card fa-sm"></i> @author.Name</a>
    </div>
    <div class="col-8">
        @if (author.Dob != null)
        {
            <h5>(@author.Dob)</h5>
        }
    </div>
</div>
<br />    
}