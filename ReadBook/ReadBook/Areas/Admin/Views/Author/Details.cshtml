@model ReadBook.Models.Authors
@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">Author Details</h2>
<form asp-action="Edit" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Dob"></label>
            </div>
            <div class="col-5">
                <input asp-for="Dob" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Infor"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="Infor" readonly="readonly" class="form-control" rows="10"></textarea>
            </div>
            <span asp-validation-for="Infor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
