@model ReadBook.Models.Works
@{
    ViewData["Title"] = "Delete";
}
<br />

<h2 class="text-info">Delete Work</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BookId"></label>
            </div>
            <div class="col-5">
                <input asp-for="Book.Name" class="form-control" value="@ViewBag.nameBook" readonly="readonly">
            </div>
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AuthorId"></label>
            </div>
            <div class="col-5">
                <input asp-for="Author.Name" value="@ViewBag.nameAuthor" readonly="readonly" class="form-control">
            </div>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

